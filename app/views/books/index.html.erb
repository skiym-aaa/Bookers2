    <div class="body">
      <div class="container">
        <div class="row">
          <div class="col-lg-3">
            <h2>User info</h2>
              <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %>
            <table class="table">
              <tbody>
                <tr></tr>
                <tr>
                  <th>name</th>
                  <th></th>
                </tr>
                <tr>
                  <th>introduction</th>
                  <th></th>
                </tr>
              </tbody>
            </table>
            <div class="row">
              <a class="col-xs-12 btn btn-default glyphicon glyphicon-wrench" href="#"></a>
            </div>
            <h2>New book</h2>
              <%if @book.errors.any? %>
                <h5><%= @book.errors.count %> errors prohibited this book from being saves:</h5>
                <ul>
                  <% @book.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              <% end %>
              <%= form_for(@book) do |f| %>
                <h4>Title</h4>
                  <%= f.text_field :title,class:"col-xs-12" %>
                <br>
                <h4>Opinion</h4>
                  <%= f.text_area :body,class:"col-xs-12" %>
                <div class="create-button">
                  <%= f.submit "Create Book", class:"btn btn-primary btn-block" %>
                </div>
              <% end %>
          </div>
        <div class="col-lg-9">
          <h2>Books</h2>
            <table class="table table-striped">
              <thead>
                <tr>
                  <th colspan="3"></th>
                  <th>Title</th>
                  <th>Opinion</th>
                </tr>
              </thead>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>

