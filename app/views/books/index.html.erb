<div class="body">
  <div class="container">
    <div class="row">
      <div class="col-lg-3">
        <h2>User info</h2>
          <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %>
      </div>
      <div class="col-lg-9">
        <h2>Books</h2>
          <table class="table table-striped">
            <thead>
              <tr>
                <th colspan="3"></th>
                <th>Title</th>
                <th>Opinion</th>
              </tr>
            </thead>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
